package LOOP1;
//// ข้อ 1
public class Q1
{

	public static void main(String[] args)
	{
		int i = 1;
		while (i<=100)
		{
			System.out.println(i);
			i=i+1;
		}

	}

}
/////ข้อ 2
public static void main(String[] args)
	{
		int i = 100;
		while (i>=1)
		{
			System.out.println(i);
			i=i-1;
			
		}
		
